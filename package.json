{
  "name": "cookie-consent",
  "version": "1.0.0",
  "description": "Secure cross-domain cookie consent manager for Herm.io",
  "main": "dist/cookie-consent.min.js",
  "scripts": {
    "build": "node build.js",
    "watch": "node build.js --watch",
    "security-check": "npm audit && npm audit fix",
    "lint": "eslint src/**/*.js",
    "test": "jest --coverage",
    "validate": "node scripts/validate-build.js",
    "prebuild": "npm run security-check",
    "postbuild": "npm run validate"
  },
  "keywords": [
    "cookie",
    "consent",
    "gdpr",
    "security",
    "privacy"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-xss": "^0.1.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "dependencies": {
    "dompurify": "^3.0.8",
    "xss": "^1.0.14"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}